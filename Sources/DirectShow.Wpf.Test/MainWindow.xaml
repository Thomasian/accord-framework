<Window x:Class="DirectShow.Wpf.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectShow.Wpf.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Name="cboVideoDevices" DisplayMemberPath="Name" SelectionChanged="cboVideoDevices_SelectionChanged"/>
        <ComboBox Grid.Row="1" Name="cboVideoResolutions"/>
        <ComboBox Grid.Row="2" Name="cboVideoInputs"/>
    </Grid>
</Window>
